extends layout

block content
  if messages
    .messages.alert
      span= messages
  h1= title
  p (* marks required fields)
  form#register(name='register', method="post", action="/register")
    p
        b Username*
    input#inputUserName(type="text", placeholder="username", name="username")
    p
        b Email*
    input#inputUserEmail(type="email", placeholder="Enter Your Email Here", name="email")
    p
        b Password*
    input#inputPassword(type="password", placeholder="Enter Your Password Here", name="password")
    p
        b Password Again*
    input#inputPassConf(type="password", placeholder="Enter Your Password Again", name="password2")
    br
    button#btnSubmit(type="submit") submit
